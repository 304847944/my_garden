<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:background="@mipmap/recycler_bg"
      android:layout_height="match_parent"
      tools:context=".MainActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/main_top_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_D1D1D1"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/colorPrimary"
        app:tabIndicatorFullWidth="false"
        app:tabBackground="@color/color_ffffff"
        app:tabRippleColor="@color/color_ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/main_viewpage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_BE9448"
        app:layout_constraintBottom_toTopOf="@+id/activitybottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_top_tab">

    </androidx.viewpager.widget.ViewPager>

    <include
        android:id="@+id/activitybottom"
        layout="@layout/includebuttomlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"/>
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>