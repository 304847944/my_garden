<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/mgkit_dp50"
    android:id="@+id/tab_bg"
    android:background="@color/sso_color_line_gray"
    >

  <TextView
      android:id="@+id/item_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:textSize="@dimen/mgkit_sp15"
      android:textColor="@color/color_000000"
      android:textStyle="normal|bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <View
      android:id="@+id/view_indicator"
      android:layout_width="@dimen/mgkit_dp15"
      android:layout_height="@dimen/mgkit_dp2"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/mgkit_dp6"
      android:background="@color/color_BE9448"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/item_title"
      />

</androidx.constraintlayout.widget.ConstraintLayout>